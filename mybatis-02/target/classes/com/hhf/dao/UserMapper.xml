<?xml version="1.0" encoding="utf8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace绑定接口-->
<mapper namespace="com.hhf.dao.UserMapper">

    <!--id 对应namespace中的方法，resultType对应泛型返回的类-->
    <select id="getUserList" resultType="user">
        select  * from mybatis.user
    </select>

    <select id="getUserById" parameterType="int" resultType="com.hhf.bean.User">
        select *from user where id = #{id}
    </select>

    <insert id="addUser" parameterType="com.hhf.bean.User"  >
        insert into mybatis.user(id,name,pwd) value (#{id},#{name},#{pwd});
    </insert>

    <update id="updateUser" parameterType="com.hhf.bean.User" >
        update  mybatis.user set name=#{name},pwd=#{pwd}  where id =#{id};
    </update>
</mapper>